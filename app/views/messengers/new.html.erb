<div class='span6 offset3'> 
  <div class="barney">
    <div class="trouble">
      <%= form_for @messenger, url: user_messengers_path(@user) do |f| %>
        <h5>
          From:</h5>
          <div class='span12 offset1'> 
        <h4>
          <%= current_user.name %>
        </h4>
      </div>
        <h5>
          To:</h5>
          <div class='span12 offset1'>
        <h4>
            <%= @user.name %>
          </div>
        </h4>
          <p>
            Message<br />
            <%= f.text_area :body, id: 'pussy' %>
          </p>
          <p>
            <%= submit_tag "Send" %>
          </p>
      <% end %>
    </div>
  </div>
</div>