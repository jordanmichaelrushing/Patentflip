<% if $law_query == "l" %>
  $('.microposts').append('<%= j render("filings/index") %>');
  <% if @filings.next_page %>
    $('.pagination').replaceWith('<%= j will_paginate(@filings) %>');
  <% else %>
    $('.pagination').remove();
  <% end %>
  <% sleep 1 %>

<% else %>
  $('.users').append('<%= j render("auctions/index") %>');
  <% if @auctions.next_page %>
    $('.pagination').replaceWith('<%= j will_paginate(@auctions) %>');
  <% else %>
    $('.pagination').remove();
  <% end %>
  <% sleep 1 %>
<% end %>