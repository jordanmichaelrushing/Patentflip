<% if signed_in? %>
	<div class="outtie">
    <div class="innie">
			<div class="row">
        <aside class="span5 offset1" id="shower">
					<section>
						<%= render 'shared/user_info' %>
					</section>
          <section>
            <%= render 'shared/stats' %>
          </section>
					<div class="bordes"></div>
						<%= render 'shared/micropost_form' %>
				</aside>
				<div class="span6">
        <% $law_query = "u" %>
          <% if @users.biz_law == "lawyer" %>
            <% $law_query = "l" %>
            <% if @filings.any? %>
              <h1>Recent Job Postings</h1>
              <ol class="microposts">
                <%= render partial: 'shared/filings' %>
              </ol>
              <loading>
                <%= will_paginate(@filings) %>
              </loading>
            <% else %>
              <br><br><br><br><br><br><h2>No recent job postings, for now...</h2>
            <% end %>
          <% elsif @user.biz_law == "business" %>
            <% $law_query = "b" %>
            <% if @auctions.any? %>
              <h1>Recent Patent Listings</h1>
              <ol class="users">
                <%= render partial: 'auctions/index' %> 
              </ol>
              <loading>
                <%= will_paginate(@auctions) %>
              </loading>
            <% else %>
              <br><br><br><br><br><br><h2>No recent patent listings, for now...</h2>
            <% end %>
          <% else %>
            <% if @feed_items.any? %><br>
              <h2>Personal Posts
                <div class="userborder"/></h2>
              <ol class="users">
                <%= render @feed_items %> 
              </ol>
              <loading>
                <%= will_paginate(@feed_items) %>
              </loading>
            <% else %>
              <br><br><br><br><br><br><h2>No recent posts, for now...</h2>
            <% end %>
          <% end %>
        </div>
			</div>
    </div>
  </div> 
<% else %>
	<div class="home-outer">
		<div class="innie">
			<div id="this-carousel-id" class="carousel slide">
			<ol class="carousel-indicators">
  			<li data-target="#this-carousel-id" data-slide-to="0" class="active"></li>
  			<li data-target="#this-carousel-id" data-slide-to="1"></li>
  			<li data-target="#this-carousel-id" data-slide-to="2"></li>
  			<li data-target="#this-carousel-id" data-slide-to="3"></li>
			</ol>
		  <div class="carousel-inner">
		    <div class="item active">
		      <img src="/assets/idea.jpg" alt="" />
		      <div class="carousel-caption">
		        <p>Everyone has ideas...but not everyone knows how to protect or sell them and get a large profit.</p>
		      </div>
		    </div>
		    <div class="item">
		      <img src="/assets/office.jpg" alt="" />
		      <div class="carousel-caption">
		        <p>Patentflip helps to bring multiple patent lawyers to you. Hire the one who fits your needs best.</p>
		      </div>
		    </div>
		    <div class="item">
		      <img src="/assets/308568_589522887735393_66814455_n.jpg" alt="" />
		      <div class="carousel-caption">
		        <p>Get businesses looking at your patent for sale without taking hours to go out and find them yourself, without the need for a patent broker.</p>
		      </div>
		    </div>
		    <div class="item">
		      <img src="/assets/legal.jpg" alt="" />
		      <div class="carousel-caption">
		        <p>Patent Brokers charge anywhere from 25-50% fees. We have a flat 10% fee, no hidden charges. Welcome to Patentflip!</p>
		      </div>
		    </div>
		  </div>
	    <a class="carousel-control left" href="#this-carousel-id" data-slide="prev">&lsaquo;</a>
	    <a class="carousel-control right" href="#this-carousel-id" data-slide="next">&rsaquo;</a>
			</div>
		</div>
	</div> 
<%= render partial: 'image' %>
</br></br></br>

<script type="text/javascript">
  $(document).ready(function() {
    $('.carousel').carousel({
    	interval: 8000
    });
  });
</script>
<% end %>