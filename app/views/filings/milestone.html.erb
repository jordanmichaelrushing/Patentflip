<% provide(:title, "#{@filing.filing_title}") %>
  </br></br></br>
<h6>Job: </h6><h2><%=@filing.filing_title%></h2>
<h8>Filed by: <%= @users.name %></h8>
  <div class="outtie">
    <div class="inner">
        <% if @user.name == @filing.lawyer_name %> <!-- If current user is the lawyer for the job -->
          <%= form_for @filing do |f| %>
            <%= f.fields_for :milestones do |builder| %>
              <milestone>
                <%= render 'milestone_fields', f: builder %>
              </milestone>
            <% end %>
            <milestone>
             <h3> <%= link_to_add_fields "Add Milestone", f, :milestones %></h3>
            </milestone>
          <% end %>
        <% else %>
        Hello
        <% end %>
      </milestone>
    </div>
  </div>