<% provide(:title, 'All users') %>
	<div class="outtie">
    <div class="innie">
			<h1>All Users</h1>

			<%= will_paginate %>

			<ul class="users">
				<% @users.each do |user| %>
				<div class="userborder"></div>
				<li>
					<%= image_tag user.avatar.url(:thumb), class: "gravatar" %>

					<%= link_to user.name, user, id: 'user_index', style: 'color: #000000'%>
          <% unless current_user?(user) %>
            <div id="follow_form">
              <% if current_user.following?(user) %>
                <%= form_for(current_user.relationships.find_by_followed_id(user), html: { method: :delete }, remote: true) do |f| %>
                  <%= f.submit "Unfollow", class: "btn btn-micro" %>
                <% end %>
              <% else %>
                <%= form_for(current_user.relationships.build(followed_id: user.id), remote: true) do |f| %>
                  <div><%= f.hidden_field :followed_id %></div>
                  <%= f.submit "Follow", class: "btn btn-micro btn-primary" %>
                <% end %>
              <% end %>
            </div>
          <% end %>
          </br>
					<%= link_to "Message User", new_user_messenger_path(user), class: "btn btn-small btn-primary", id: "sign_btn5"%>
					<% if current_user.admin? && !current_user?(user) %>
						| <%= link_to "delete", user, method: :delete, confirm: "Are you sure you want to delete this user?" %>
					<% end %>
			
					<div class="userlinks">
						<%= link_sale%></br>
						<%= link_sold%></br>
						<%= link_buy%>
          </div>
				</li>
				<% end %>
			</ul>

			<%= will_paginate %>
		</div>
	</div>