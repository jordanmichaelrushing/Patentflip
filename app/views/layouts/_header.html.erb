<header class="navbar navbar-static-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to image_tag("/assets/Patent_Lettering.png", id: "logo"), root_path %>
      <nav>						
				<ul class="nav pull-right">
		  		<% if signed_in? %>
            <li class="divider-vertical"></li>
            <% if current_user.unread_messages? %>
              <% if current_user.unread_message_count == 1 %>
              <li><a href="<%= user_messengers_path(current_user) %>" title="<%= current_user.unread_message_count %> new message!">
                <% else %>
              <li><a href="<%= user_messengers_path(current_user) %>" title="<%= current_user.unread_message_count %> new messages!">
                <% end %>
                <%= image_tag("/assets/messages_icon.png", id: "message_icon_open") %></a>
              </li>
            <% else %>
              <li>
                <a href="<%= user_messengers_path(current_user) %>" title="No new messages!"><%= image_tag("/assets/messages_closed_icon.png", id: "message_icon") %></a>
              </li>
            <% end %>
     				<li class="divider-vertical"></li>
            <li>
                <a href="#" title="Find A Patent Lawyer!"><%= image_tag("/assets/lawyer_icon.png", id: "lawyer_icon") %></a>
            </li>
            
            <li class="divider-vertical"></li>
		  			<li>
              <a href="<%= new_auction_path %>" title="Let's flip your patent on the marketplace!"><%= image_tag("/assets/pat_add_icon.png", id: "patent_icon") %></a>
            </li>
     				
            <li class="divider-vertical"></li>
		  			<li>
              <a href="<%= patents_path %>" title="Look at the patents on the marketplace!"><%= image_tag("/assets/pat_find_icon.png", id: "patent_icon") %></a>
            </li>
   					
            <li class="divider-vertical"></li>
						
            <li id="fat-menu" class="dropdown">
							<a href="#" class="dropdown-toggle" data-hover="dropdown" data-delay="200">
								<%= image_tag("/assets/settings_icon.png", id: "message_icon") %>
							</a>
							<ul class="dropdown-menu">

								<li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Help", help_path %></li>
								<li><%= link_to "Settings", edit_user_path(current_user) %></li>
								<li class="divider"></li>
								<li>
									<%= link_to "Sign out", signout_path, method: "delete", id: "delete_css" %>
								</li>
							</ul>
						</li>
						<li class="divider-vertical"></li>
					<% else %>
			      <li class="divider-vertical"></li>
						<li><%= link_to "Home", root_path, id: "home_css" %></li>

      			<li class="divider-vertical"></li>
		  		  <li><%= link_to "Help", help_path, id: "help_css" %></li>
		 				
		 				<li class="divider-vertical"></li>
		 				<li id="fat-menu" class="dropdown">
							<a href="#" class="dropdown-toggle" data-hover="dropdown" data-delay="200">
								Sign In
							</a>
							<ul class="dropdown-menu">
								<div class="span4">
									<div class="tempshit">
									<%= form_for(:session, url: sessions_path) do |f| %>
										<%= f.label :email %>
										<%= f.text_field :email %>
										<%= f.label :password %>
										<%= f.password_field :password %>
										<%= f.submit "Sign in", class: "btn btn-small btn-primary" %>
									<% end %>
								</div>
								</div>
							</ul>
						</li>
						<li class="divider-vertical"></li>
		  			<li><%= link_to "FAQ's", faq_path%></li>
						<li class="divider-vertical"></li>
		 			<% end %>
				</ul>
	  	</nav>
		</div>
  </div>
  <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
  <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
  <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
  <script>
  $(function() {
    $( document ).tooltip();
  });</script>
  <script src="/assets/dropdown.js"></script>
<script type="text/javascript">$('.dropdown-toggle').dropdownHover();</script>
</header>