<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to image_tag("/assets/Patent_Lettering.png", id: "logo"), root_path %>
      <nav>

      	<form class="navbar-search">
      		<div class="span2">
  				<input type="text" class="search-query" placeholder="Search"> </div>
				</form>
				
				<ul class="nav pull-right">
		  		<% if signed_in? %>
            <li class="divider-vertical"></li>
            <% if current_user.unread_messages? %>
              <li><%= link_to "Inbox (#{current_user.unread_message_count})", user_messengers_path(current_user), id: "home_css" %></li>
            <% else %>
              <li><%= link_to "Inbox", user_messengers_path(current_user), id: "home_css" %>
            </li>
            <% end %>
     				<li class="divider-vertical"></li>
		  			<li><%= link_to "List Patent", new_user_auction_path(current_user), id: "home_css" %></li>
     				<li class="divider-vertical"></li>
		  			<li><%= link_to "Me", current_user, id: "home_css" %></li>
     				<li class="divider-vertical"></li>
		  			<li><%= link_to "Help", help_path, id: "help_css" %></li>
   					<li class="divider-vertical"></li>
		  			<li><%= link_to "Uncover A Patent", users_path, id: "users_css" %></li>
   					<li class="divider-vertical"></li>
						<li id="fat-menu" class="dropdown">
							<a href="#" class="dropdown-toggle" data-hover="dropdown" data-delay="200">
								Account
							</a>
							<ul class="dropdown-menu">

								<li><%= link_to "Profile", current_user %></li>
								<li><%= link_to "Settings", edit_user_path(current_user) %></li>
								<li class="divider"></li>
								<li>
									<%= link_to "Sign out", signout_path, method: "delete", id: "delete_css" %>
								</li>
							</ul>
						</li>
						<li class="divider-vertical"></li>
		  			<li><%= link_to "FAQ's", faq_path%></li>
					<% else %>
			      <li class="divider-vertical"></li>
						<li><%= link_to "Home", root_path, id: "home_css" %></li>

      			<li class="divider-vertical"></li>
		  		  <li><%= link_to "Help", help_path, id: "help_css" %></li>
		 				
		 				<li class="divider-vertical"></li>
		 				<li id="fat-menu" class="dropdown">
							<a href="#" class="dropdown-toggle" data-hover="dropdown" data-delay="200">
								Sign In
							</a>
							<ul class="dropdown-menu">
								<div class="span4">
									<div class="tempshit">
									<%= form_for(:session, url: sessions_path) do |f| %>
										<%= f.label :email %>
										<%= f.text_field :email %>
										<%= f.label :password %>
										<%= f.password_field :password %>
										<%= f.submit "Sign in", class: "btn btn-small btn-primary" %>
									<% end %>
								</div>
								</div>
							</ul>
						</li>
						<li class="divider-vertical"></li>
		  			<li><%= link_to "FAQ's", faq_path%></li>
						<li class="divider-vertical"></li>
		 			<% end %>
				</ul>
	  	</nav>
		</div>
  </div>
  <script>$('#example').tooltip(options)</script>
  <script src="/assets/dropdown.js"></script>
<script type="text/javascript">$('.dropdown-toggle').dropdownHover();</script>
</header>