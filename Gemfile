  gem 'uglifier', '>= 1.0.3'
end

group :test, :development do
	gem 'rspec-rails', '2.9.0'
	gem 'guard-rspec'
	gem 'guard-spork'
	gem 'spork'
end

group :test do
	gem 'capybara', '1.1.2'
	gem 'factory_girl_rails'
	gem 'cucumber-rails'
	gem 'database_cleaner'
end

group :production do
  gem 'pg'
  gem "rails_version", ">= 0.2.3"
 end

